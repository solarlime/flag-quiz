{
  "pre-push": {
    "jobs": [
      {
        "name": "Run tests",
        "run": "yarn run test"
      }
    ]
  },
  "pre-commit": {
    "jobs": [
      {
        "name": "Run ESLint",
        "run": "yarn exec eslint --fix {staged_files}",
        "stage_fixed": true
      },
      {
        "name": "Run Prettier",
        "run": "yarn exec prettier --write {staged_files}",
        "stage_fixed": true
      }
    ]
  }
}
